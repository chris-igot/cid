{% extends "/base.jinja" %} {% block title %}CID - Login/Register{% endblock %} {% block content
%}

<div class="row">
  <div class="d-flex justify-content-center align-items-center">
    <form
      class="border rounded p-2 my-5 col-10 col-sm-8 col-md-6 col-lg-4 shadow"
      action="/register/submit"
      method="post"
    >
      <h3 class="mt-2 mb-3">Register with CID</h3>
      <div class="mb-2 form-floating">
        <input
          type="text"
          name="first_name"
          id="first_name"
          class="form-control"
          placeholder="placeholder"
        />
        <label for="first_name" class="form-label mb-0">First Name</label>
        {% with
        messages=get_flashed_messages(category_filter=["registration_error_first_name"])
        %} {% for msg in messages %}
        <small class="text-danger">{{ msg }}</small
        ><br />
        {% endfor %} {% endwith %}
      </div>
      <div class="mb-2 form-floating">
        <input
          type="text"
          name="last_name"
          id="last_name"
          class="form-control"
          placeholder="placeholder"
        />
        <label for="last_name" class="form-label mb-0">Last Name</label>
        {% with
        messages=get_flashed_messages(category_filter=["registration_error_last_name"])
        %} {% for msg in messages %}
        <small class="text-danger">{{ msg }}</small
        ><br />
        {% endfor %} {% endwith %}
      </div>
      <div class="mb-2 form-floating">
        <input type="email" name="email" id="email" class="form-control" placeholder="placeholder"/>
        <label for="email" class="form-label mb-0">Email</label>
        {% with
        messages=get_flashed_messages(category_filter=["registration_error_email"])
        %} {% for msg in messages %}
        <small class="text-danger">{{ msg }}</small
        ><br />
        {% endfor %} {% endwith %}
      </div>
      <div class="mb-2 form-floating">
        <input
          type="password"
          name="password"
          id="password"
          class="form-control"
          placeholder="placeholder"
        />
        <label for="password" class="form-label mb-0">Password</label>
        {% with
        messages=get_flashed_messages(category_filter=["registration_error_password"])
        %} {% for msg in messages %}
        <small class="text-danger">{{ msg }}</small
        ><br />
        {% endfor %} {% endwith %}
      </div>
      <div class="mb-5 form-floating">
        <input
          type="password"
          name="confpassword"
          id="confpassword"
          class="form-control"
          placeholder="placeholder"
        />
        <label for="confpassword" class="form-label mb-0"
          >Confirm Password</label
        >
        {% with
        messages=get_flashed_messages(category_filter=["registration_error_confpassword"])
        %} {% for msg in messages %}
        <small class="text-danger">{{ msg }}</small
        ><br />
        {% endfor %} {% endwith %}
      </div>
      {% with
      messages=get_flashed_messages(category_filter=["registration_messages"])
      %} {% for msg in messages %}
      <small class="text-{{'success' if msg[:7] == 'Success' else 'danger'}}">{{
        msg
      }}</small
      ><br />
      {% endfor %} {% endwith %}
      <button type="submit" class="btn btn-primary">Register</button>
    </form>
  </div>
</div>
{% endblock %}
