{% extends "/admin/loggedin_base.jinja" %}
{% block toptext %}CID - Administration{% endblock  %}
{% block navlinks %}
{# <a href="/apps" class="nav-link active">Pie Derby</a> #}
{% endblock  %}

{% block content %}
<div class="row">
    <div class="col-12 col-md-6">
        <form class="border border-secondary rounded p-2" action="/admin/apps/{{app.id}}/edit" method="post">
			<h3>Edit {{app.name}}</h3>
			<div class="mb-2">
				<label for="name" class="form-label mb-0">Name</label>
				<input type="text" name="name" id="name" class="form-control" value="{{app.name}}">
                {% with messages=get_flashed_messages(category_filter=["app_error_name"]) %}
                    {% for msg in messages %}
                        <small class="text-danger">{{msg}}</small><br>
                    {% endfor %}
                {% endwith %}
			</div>
			<div class="mb-2">
				<label for="callback" class="form-label mb-0">callback</label>
				<input type="text" name="callback" id="callback" class="form-control" value="{{app.callback}}">
                {% with messages=get_flashed_messages(category_filter=["app_error_callback"]) %}
                    {% for msg in messages %}
                        <small class="text-danger">{{msg}}</small><br>
                    {% endfor %}
                {% endwith %}
			</div>
			{% with messages=get_flashed_messages(category_filter=["app_messages"]) %}
					{% for msg in messages %}
						<small class="text-danger">{{msg}}</small><br>
					{% endfor %}
			{% endwith %}
			<button type="submit" class="btn btn-primary">Update</button>
		</form>
    </div>
</div>
{% endblock  %}

    