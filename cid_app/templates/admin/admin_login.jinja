{% extends "/base.jinja" %} {% block title %}CID Admin - Login/Register{% endblock %} {% block content
%}
<div class="row">
  <h2 class="text-center mb-4">CID Admin</h2>
</div>
<div class="row">
  <div class="col-12 col-md-6 pe-md-1 pe-lg-5 mb-2 mb-md-0">
    <form
      class="border border-3 border-dark rounded p-2"
      action="/admin/login/submit"
      method="post"
    >
      <h3>Login</h3>
      <div class="mb-2">
        <label for="email" class="form-label mb-0">Email</label>
        <input type="email" name="email" id="email" class="form-control" />
      </div>
      <div class="mb-5">
        <label for="password" class="form-label mb-0">Password</label>
        <input
          type="password"
          name="password"
          id="password"
          class="form-control"
        />
      <p><a href="/admin/register">New user? Register here</a></p>
      </div>
      {% with messages=get_flashed_messages(category_filter=["login_messages"])
      %} {% for msg in messages %}
      <small class="text-danger">{{ msg }}</small
      ><br />
      {% endfor %} {% endwith %}
      <button type="submit" class="btn btn-primary">Login</button>
    </form>
  </div>
</div>
{% endblock %}
